@model AppUI.Models.ParticipantEventDetails
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<html>
<head>
    <title>Delete Participant</title>
</head>
<body>
    <h2>Are you sure you want to delete this participant?</h2>
    <form asp-route="RemoveParticipant" method="post">
        <input type="hidden" asp-for="Id" />
        <p><strong>Email:</strong> @Model.ParticipantEmailId</p>
        <p><strong>Event ID:</strong> @Model.EventId</p>
        <input type="submit" value="Delete" />
    </form>
</body>
</html>
