@model List<AppUI.Models.EventDetails>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<html>
<head>
    <title>Event List</title>
</head>
<body>
    <h2>All Events</h2>
    <a asp-route="AddEvent">Add New Event</a>
    <table border="1">
        <thead>
            <tr>
                <th>Event Name</th>
                <th>Category</th>
                <th>Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EventName</td>
                    <td>@item.EventCategory</td>
                    <td>@item.EventDate.ToShortDateString()</td>
                    <td>@item.Status</td>
                    <td>
                        <a asp-route="UpdateEvent" asp-route-id="@item.EventId">Edit</a> |
                        <a asp-route="DeleteEvent" asp-route-id="@item.EventId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
