@model CaseStudy1.Models.ClientInfo

<h2 class="text-info">Add New Client</h2>

<form asp-action="AddClient" method="post" class="w-50">
        <label asp-for="ClientId"></label>
    <input asp-for="ClientId" class="form-control" placeholder="ID" />
    
        <label asp-for="CompanyName"></label>
        <input asp-for="CompanyName" class="form-control" placeholder="Company Name" />

        <label asp-for="WebUrl"></label>
    <input asp-for="WebUrl" class="form-control" placeholder="URL" />

        <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control" placeholder="Email" />

        <label asp-for="Category"></label>
    <input asp-for="Category" class="form-control" placeholder="Category" />

        <label asp-for="Standard"></label>
    <input asp-for="Standard" class="form-control" placeholder="Standard" />

    <button type="submit" class="btn btn-primary">Save</button>
</form>
