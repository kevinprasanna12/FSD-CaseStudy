@model CaseStudy2.Models.ClientInfo
@{
    Layout = null;
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
<div class="container mt-4">
    <h2 class="mb-4">Add New Client</h2>
    <form asp-action="AddClient" method="post">
        <div class="form-group">
            <label>Client ID</label>
            <input asp-for="ClientId" class="form-control" />
        </div>
        <div class="form-group">
            <label>Company Name</label>
            <input asp-for="CompanyName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Web URL</label>
            <input asp-for="WebUrl" class="form-control" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label>Category</label>
            <input asp-for="Category" class="form-control" />
        </div>
        <div class="form-group">
            <label>Standard</label>
            <input asp-for="Standard" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Save</button>
    </form>
</div>
